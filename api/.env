# app
APP_NAME=Nest Admin
APP_PORT=7001
APP_BASE_URL=http://localhost:${APP_PORT}
APP_LOCALE=zh-CN
PROJECT_DIR=/nest-admin

# 是否允许多端登录
MULTI_DEVICE_LOGIN=true

# logger
LOGGER_LEVEL=verbose
LOGGER_MAX_FILES=31

TZ=Asia/Shanghai

# OSS(qiniu)
OSS_ACCESSKEY=xxx
OSS_SECRETKEY=xxx
OSS_DOMAIN=https://cdn.buqiyuan.site
OSS_BUCKET=nest-admin
OSS_ZONE=Zone_z2
OSS_ACCESS_TYPE=public

# database (for docker-compose and app)
DB_HOST=mysql
# container-to-container port (MySQL runs on 3307 inside the network)
DB_PORT=3307
DB_DATABASE=nest_admin
DB_USERNAME=root
DB_PASSWORD=123456

# host-mapped ports (for binding to your Windows host)
DB_HOST_PORT=13307
REDIS_HOST_PORT=16379

# redis (for docker-compose and app, container-to-container port)
REDIS_PORT=6379
REDIS_PASSWORD=123456
